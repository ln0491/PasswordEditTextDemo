<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="liu.passwordedittextdemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>





    <liu.passwordedittextdemo.view.PasswordEditText
        android:id="@+id/passwordEt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:maxLength="6"
        app:passwordColor="#33000000"
        android:inputType="number"
        app:passwordLength="6"/>



    <liu.passwordedittextdemo.view.PasswordEditText
        android:id="@+id/passwordEt2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:maxLength="6"
        app:borderWidth="10dp"
        app:passwordRadius="10dp"
        app:borderColor="#00ff00"
        app:passwordColor="#ff0000"
        android:inputType="number"
        app:passwordLength="6"/>



    <liu.passwordedittextdemo.view.PasswordEditText
        android:id="@+id/passwordEt3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:maxLength="6"
        app:borderWidth="5dp"
        app:passwordRadius="5dp"
        app:borderColor="#0000ff"
        app:passwordColor="#00ff00"
        android:inputType="number"
        app:passwordLength="6"/>


</LinearLayout>
